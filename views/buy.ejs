<section class="product">
    <% if(prod != '') { %>
      <% prod.forEach(function(prod, index){ %>
      <div class="content">
        <div class="box">
          <div class="img">
            <img src="img/<%= prod.image %>" alt="">
          </div>
          <p><%= prod.name %></p>
          <small>Category: <%= prod.category %></small>
          <div class="cart">
            <div class="add">
              <a href="/buy/<%= prod.name %>"><span>BUY</span></a>
            </div>
          </div>
        </div>
    </div>
    <% }) %>
        <% } %>
  </section>